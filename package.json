{
	"name": "melizer",
	"version": "1.0.0",
	"description": "A telegram bot for message statistics in chats",
	"main": "dist/index.js",
	"scripts": {
		"start": "node dist/index.js",
		"watch": "npm run build -- --watch",
		"build": "tsc -p tsconfig.build.json",
		"test": "jest --config jest.config.json --maxWorkers=1",
		"lint": "eslint . --ext .ts",
		"lint-fix": "npm run lint -- --fix",
		"wDebug": "@powershell -Command $env:DEBUG='*';npm start",
		"uDebug": "DEBUG=* npm start"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Ripretention/melizer.git"
	},
	"keywords": [
		"Telegram",
		"Telegram Bot",
		"Bot"
	],
	"author": "Ripretention",
	"license": "MIT",
	"dependencies": {
		"@types/node": "^18.7.21",
		"debug": "^4.3.4",
		"dotenv": "^16.0.3",
		"pg": "^8.8.0",
		"tg-io": "^1.5.0",
		"typeorm": "^0.3.10",
		"typescript": "^4.8.3"
	},
	"devDependencies": {
		"@types/jest": "^29.1.1",
		"@typescript-eslint/eslint-plugin": "^5.38.0",
		"@typescript-eslint/parser": "^5.38.0",
		"eslint": "^8.24.0",
		"jest": "^29.1.2",
		"ts-jest": "^29.0.3"
	}
}
